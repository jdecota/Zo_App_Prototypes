<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zo_App_Prototypes.Pages.DescriptionPage"
             Title="DescriptionPage"
             xmlns:vm="clr-namespace:Zo_App_Prototypes.Pages"
             x:DataType="vm:DescriptionPageVM">
    <VerticalStackLayout>
		 <Label Text="Description Page"/>


	    <Label
		    FontSize="Large"
		    HorizontalOptions="Center"
		    Text="{Binding Desc}"
		    VerticalOptions="Center" />

	    <Button
		    Margin="0,20,0,0"
		    Command="{Binding BackCommand}"
		    HorizontalOptions="Center"
		    Text="Back"
		    WidthRequest="200" />
	</VerticalStackLayout>
</ContentPage>