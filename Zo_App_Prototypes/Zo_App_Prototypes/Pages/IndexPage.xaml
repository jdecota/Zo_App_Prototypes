<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zo_App_Prototypes.Pages.IndexPage"
             Title="IndexPage"
             xmlns:vm="clr-namespace:Zo_App_Prototypes.Pages"
             x:DataType="vm:IndexPageVM">
	<VerticalStackLayout Padding="20" MaximumWidthRequest="600">
		<Label
			FontSize="Large"
			HorizontalOptions="Center"
			Text="{Binding Greeting}" />

		<Button
			Margin="0,20,0,0"
			Command="{Binding ToDescriptionPageCommand}"
			HorizontalOptions="Center"
			Text="Description"
			WidthRequest="200" />
		</VerticalStackLayout>
</ContentPage>